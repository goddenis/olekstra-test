<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="ru.olekstra.domains.Letter" table="letters">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property column = "number" name = "number" type="java.lang.String"/>
        <property column="date" name="date" type="java.util.Date"/>
        <property column="subject" name="subject" type="java.lang.String"/>
        <property column="posted" name="posted" type="java.lang.Boolean"/>
        <property column="file_link" name="fileLink" type="java.lang.String"/>
        <property column="notes" name="notes" type="java.lang.String"/>

    </class>
</hibernate-mapping>